<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F5F5F5"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth L:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/bluetoothLeftStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Bonded"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="4dp"
            android:textStyle="bold"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth R:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/bluetoothRightStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Bonded"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="4dp"
            android:textStyle="bold"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/caseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glasses in Case:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/glassesInCaseStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unknown"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Battery:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/caseBatteryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glasses Battery:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/glassesBatteryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Charging:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/caseChargingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glasses Charging:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/glassesChargingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heartbeat:"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/heartbeatStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"/>
    </TableRow>

</TableLayout> 